{
  "name": "@ht/apollo",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build": "esbuild src/index.ts --external:pino --external:@ht/db --external:@apollo/server --bundle --platform=node --format=esm --loader:.graphql=file --outfile=dist/index.js",
    "dev": "pnpm with-env run-p dev:*",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev:node": "node --watch dist/index.js",
    "dev:esbuild": "pnpm run build --watch",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "devDependencies": {
    "@ht/eslint-config": "workspace:^0.2.0",
    "@ht/prettier-config": "workspace:^0.1.0",
    "@ht/tsconfig": "workspace:^0.1.0",
    "dotenv-cli": "^7.3.0",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "extends": [
      "@ht/eslint-config/base"
    ]
  },
  "prettier": "@ht/prettier-config",
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "@ht/api": "workspace:^0.1.0",
    "@ht/auth": "workspace:^0.1.0",
    "@ht/db": "workspace:^0.1.0",
    "graphql": "^16.8.1",
    "pino": "^8.17.2"
  }
}
