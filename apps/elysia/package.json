    "@elysiajs/trpc": "^0.8.0",
    "@ht/db": "workspace:*",
    "@trpc/server": "next",
    "elysia": "0.8.10",
    "pino": "^8.17.2",
    "superjson": "^2.2.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@ht/eslint-config": "workspace:*",
    "@ht/prettier-config": "workspace:*",
    "@ht/tsconfig": "workspace:*",
    "bun-types": "latest",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@ht/eslint-config/base"
    ]
