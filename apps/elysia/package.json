{
  "name": "@ht/elysia",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint .",
    "clean": "rm -rf .turbo node_modules",
    "test": "bun --env-file=../../.env.test test",
    "test:watch": "bun --env-file=../../.env.test --watch test",
